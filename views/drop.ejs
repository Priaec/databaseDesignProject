<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Item Database</title>
  </head>
  <body>
    <h1>Add an item</h1>
    <!-- Form to add a new item to the database -->
    <form action="/add-item" method="POST">
      <label for="title">Title:</label>
      <input type="text" name="title" required />
      <br />
      <label for="description">Description:</label>
      <textarea name="description" required></textarea>
      <br />
      <label for="category">Category:</label>
      <input type="text" name="category" required />
      <br />
      <label for="price">Price:</label>
      <input type="number" name="price" step="0.01" required />
      <br />
      <input type="submit" value="Add item" />
    </form>

    <h1>Search by category</h1>
    <!-- Form to search for items in the database -->
    <form action="/search" method="GET">
      <label for="category">Category:</label>
      <input type="text" name="category" required />
      <input type="submit" value="Search" />
    </form>

    <!-- Table to display the search results -->
    <h1>Search Results</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Category</th>
          <th>Price</th>
          <th>Review</th>
        </tr>
      </thead>
      <tbody>
        <!-- Loop through the search results and display each item in a row -->
        <% searchResults.forEach(item => { %>
          <tr>
            <td><%= item.title %></td>
            <td><%= item.description %></td>
            <td><%= item.category %></td>
            <td><%= item.price %></td>
            <td><a href="/review/<%= item.id %>">Add Review</a></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>
